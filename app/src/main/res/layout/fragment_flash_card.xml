<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FlashCardFragment">

    <ImageView
        android:id="@+id/image_back_arrow"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_x"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/black_800" />

    <TextView
        android:id="@+id/edit_deck_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="28sp"
        android:background="@null"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/image_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Ingles"/>

    <TextView
        android:id="@+id/tv_step"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:text="01/80"
        android:textSize="20sp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="@id/edit_deck_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/edit_deck_title"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="36dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/edit_deck_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_card_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="Conteudo"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_flip_indicator"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_flip"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_dificulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Dificuldade"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dificulty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:layout_weight="1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/ic_x"
            android:paddingVertical="8dp"
            android:textAlignment="center"
            android:background="@drawable/backgroun_rounded"
            android:backgroundTint="@color/turquoise_500"
            android:textColor="@color/gray_100"
            android:drawableTint="@color/gray_100"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Facil"/>

        <RadioButton
            android:layout_weight="1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/ic_x"
            android:paddingVertical="8dp"
            android:textAlignment="center"
            android:text="Medio"/>

        <RadioButton
            android:layout_weight="1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/ic_x"
            android:paddingVertical="8dp"
            android:textAlignment="center"
            android:text="Dificil"/>
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proxima"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>