<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".authenticated.result.ResultFragment">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingVertical="20dp"
            android:paddingHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_view_congratulation_indicator"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:paddingVertical="22dp"
                android:src="@drawable/ic_congratulation"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_congratulation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Well done"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_marginVertical="10dp"
                android:textColor="@color/turquoise_500"
                app:layout_constraintTop_toBottomOf="@id/image_view_congratulation_indicator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_congratulation_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You improve your knoledge about on:"
                android:textAlignment="center"
                android:textSize="22dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_congratulation_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_congratulation_deck_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of deck"
                android:textAlignment="center"
                android:textSize="28dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_congratulation_message"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/first_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_300"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_congratulation_deck_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/text_view_enjoy_literal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aproveitamento"
                android:layout_marginTop="20dp"
                android:paddingBottom="8dp"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/first_divider"/>

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circular_progress_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:progress="40"
                app:indicatorSize="80dp"
                app:trackThickness="8dp"
                app:trackCornerRadius="10dp"
                app:indicatorDirectionCircular="clockwise"
                app:trackColor="@color/gray_300"
                app:layout_constraintTop_toBottomOf="@id/text_view_enjoy_literal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/circular_progress_skip"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_bad_emoji_active"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="@id/circular_progress_bad"
                app:layout_constraintStart_toStartOf="@id/circular_progress_bad"
                app:layout_constraintEnd_toEndOf="@id/circular_progress_bad"
                app:layout_constraintBottom_toBottomOf="@id/circular_progress_bad"/>

            <TextView
                android:id="@+id/tv_bad_percentage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="20%"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/circular_progress_bad"
                app:layout_constraintStart_toStartOf="@id/circular_progress_bad"
                app:layout_constraintEnd_toEndOf="@id/circular_progress_bad"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="Marcado como dificil"
                app:layout_constraintTop_toBottomOf="@id/tv_bad_percentage"
                app:layout_constraintStart_toStartOf="@id/circular_progress_bad"
                app:layout_constraintEnd_toEndOf="@id/circular_progress_bad"/>

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circular_progress_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:progress="40"
                app:indicatorSize="80dp"
                app:trackThickness="8dp"
                app:trackCornerRadius="10dp"
                app:indicatorDirectionCircular="clockwise"
                app:trackColor="@color/gray_300"
                app:layout_constraintTop_toBottomOf="@id/text_view_enjoy_literal"
                app:layout_constraintStart_toEndOf="@id/circular_progress_bad"
                app:layout_constraintEnd_toStartOf="@id/circular_progress_easy"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_normal_emoji_active"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="@id/circular_progress_skip"
                app:layout_constraintStart_toStartOf="@id/circular_progress_skip"
                app:layout_constraintEnd_toEndOf="@id/circular_progress_skip"
                app:layout_constraintBottom_toBottomOf="@id/circular_progress_skip"/>

            <TextView
                android:id="@+id/tv_skip_percentage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="20%"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/circular_progress_skip"
                app:layout_constraintStart_toStartOf="@id/circular_progress_skip"
                app:layout_constraintEnd_toEndOf="@id/circular_progress_skip"/>

            <TextView
                android:id="@+id/tv_skip_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="Marcado como escapar"
                app:layout_constraintTop_toBottomOf="@id/tv_skip_percentage"
                app:layout_constraintStart_toStartOf="@id/circular_progress_skip"
                app:layout_constraintEnd_toEndOf="@id/circular_progress_skip"/>

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circular_progress_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:progress="40"
                app:indicatorSize="80dp"
                app:trackThickness="8dp"
                app:trackCornerRadius="10dp"
                app:indicatorDirectionCircular="clockwise"
                app:trackColor="@color/gray_300"
                app:layout_constraintTop_toBottomOf="@id/text_view_enjoy_literal"
                app:layout_constraintStart_toEndOf="@id/circular_progress_skip"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_happy_emoji_active"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="@id/circular_progress_easy"
                app:layout_constraintStart_toStartOf="@id/circular_progress_easy"
                app:layout_constraintEnd_toEndOf="@id/circular_progress_easy"
                app:layout_constraintBottom_toBottomOf="@id/circular_progress_easy"/>

            <TextView
                android:id="@+id/tv_easy_percentage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="20%"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/circular_progress_easy"
                app:layout_constraintStart_toStartOf="@id/circular_progress_easy"
                app:layout_constraintEnd_toEndOf="@id/circular_progress_easy"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:text="Marcado como facil"
                app:layout_constraintTop_toBottomOf="@id/tv_skip_percentage"
                app:layout_constraintStart_toStartOf="@id/circular_progress_easy"
                app:layout_constraintEnd_toEndOf="@id/circular_progress_easy"/>

            <View
                android:id="@+id/second_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_300"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_skip_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_completed_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estudo completo"
                android:layout_marginTop="22dp"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/second_divider"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                app:cornerRadius="8dp"
                android:text="Feito"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_completed_caption"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>