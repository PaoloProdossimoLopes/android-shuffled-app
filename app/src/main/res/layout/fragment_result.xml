<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp">

            <ImageView
                android:id="@+id/resultCongratulationImageView"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:contentDescription="@null"
                android:paddingVertical="22dp"
                android:src="@drawable/ic_congratulation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/resultCongratulationTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:textAlignment="center"
                android:textColor="@color/turquoise_500"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resultCongratulationImageView"
                android:text="@string/resultCongratulationTitleText" />

            <TextView
                android:id="@+id/resultCongratulationDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:textAlignment="center"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resultCongratulationTitleTextView"
                android:text="@string/resultCongratulationDescriptionText" />

            <TextView
                android:id="@+id/resultCongratulationDeckNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:textAlignment="center"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resultCongratulationDescriptionTextView"
                tools:text="Name of deck" />

            <View
                android:id="@+id/resultCongratulationDividerView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray_300"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resultCongratulationDeckNameTextView" />

            <TextView
                android:id="@+id/resultEnjoyTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingBottom="8dp"
                android:text="@string/resultStatsSectionTitleText"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resultCongratulationDividerView" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/resultHardCircularProgressView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorDirectionCircular="clockwise"
                app:indicatorSize="80dp"
                app:layout_constraintEnd_toStartOf="@id/resultIntermediateCircularProgressView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resultEnjoyTitleTextView"
                app:trackColor="@color/gray_300"
                app:trackCornerRadius="10dp"
                app:trackThickness="8dp"
                tools:progress="40" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:padding="20dp"
                android:src="@drawable/ic_bad_emoji_active"
                app:layout_constraintBottom_toBottomOf="@id/resultHardCircularProgressView"
                app:layout_constraintEnd_toEndOf="@id/resultHardCircularProgressView"
                app:layout_constraintStart_toStartOf="@id/resultHardCircularProgressView"
                app:layout_constraintTop_toTopOf="@id/resultHardCircularProgressView" />

            <TextView
                android:id="@+id/resultHardPercentageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/resultHardCircularProgressView"
                app:layout_constraintStart_toStartOf="@id/resultHardCircularProgressView"
                app:layout_constraintTop_toBottomOf="@id/resultHardCircularProgressView"
                tools:text="20%" />

            <TextView
                android:id="@+id/resultHardDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/resultHardCircularProgressView"
                app:layout_constraintStart_toStartOf="@id/resultHardCircularProgressView"
                app:layout_constraintTop_toBottomOf="@id/resultHardPercentageTextView"
                android:text="@string/resultPercentageDifficultyDescriptionText" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/resultIntermediateCircularProgressView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorDirectionCircular="clockwise"
                app:indicatorSize="80dp"
                app:layout_constraintEnd_toStartOf="@id/resultEasyCircularProgressView"
                app:layout_constraintStart_toEndOf="@id/resultHardCircularProgressView"
                app:layout_constraintTop_toBottomOf="@id/resultEnjoyTitleTextView"
                app:trackColor="@color/gray_300"
                app:trackCornerRadius="10dp"
                app:trackThickness="8dp"
                tools:progress="40" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:padding="20dp"
                android:src="@drawable/ic_normal_emoji_active"
                app:layout_constraintBottom_toBottomOf="@id/resultIntermediateCircularProgressView"
                app:layout_constraintEnd_toEndOf="@id/resultIntermediateCircularProgressView"
                app:layout_constraintStart_toStartOf="@id/resultIntermediateCircularProgressView"
                app:layout_constraintTop_toTopOf="@id/resultIntermediateCircularProgressView" />

            <TextView
                android:id="@+id/resultIntermediatePercentageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/resultIntermediateCircularProgressView"
                app:layout_constraintStart_toStartOf="@id/resultIntermediateCircularProgressView"
                app:layout_constraintTop_toBottomOf="@id/resultIntermediateCircularProgressView"
                tools:text="20%" />

            <TextView
                android:id="@+id/resultIntermediateDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/resultIntermediateCircularProgressView"
                app:layout_constraintStart_toStartOf="@id/resultIntermediateCircularProgressView"
                app:layout_constraintTop_toBottomOf="@id/resultIntermediatePercentageTextView"
                android:text="@string/resultPercentageIntermediaryDescriptionText" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/resultEasyCircularProgressView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorDirectionCircular="clockwise"
                app:indicatorSize="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/resultIntermediateCircularProgressView"
                app:layout_constraintTop_toBottomOf="@id/resultEnjoyTitleTextView"
                app:trackColor="@color/gray_300"
                app:trackCornerRadius="10dp"
                app:trackThickness="8dp"
                tools:progress="40" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@null"
                android:padding="20dp"
                android:src="@drawable/ic_happy_emoji_active"
                app:layout_constraintBottom_toBottomOf="@id/resultEasyCircularProgressView"
                app:layout_constraintEnd_toEndOf="@id/resultEasyCircularProgressView"
                app:layout_constraintStart_toStartOf="@id/resultEasyCircularProgressView"
                app:layout_constraintTop_toTopOf="@id/resultEasyCircularProgressView" />

            <TextView
                android:id="@+id/resultEasyPercentageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/resultEasyCircularProgressView"
                app:layout_constraintStart_toStartOf="@id/resultEasyCircularProgressView"
                app:layout_constraintTop_toBottomOf="@id/resultEasyCircularProgressView"
                tools:text="20%" />

            <TextView
                android:id="@+id/resultEasyDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@id/resultEasyCircularProgressView"
                app:layout_constraintStart_toStartOf="@id/resultEasyCircularProgressView"
                app:layout_constraintTop_toBottomOf="@id/resultIntermediatePercentageTextView"
                android:text="@string/resultPercentageEasyDescriptionText" />

            <View
                android:id="@+id/resultFooterDividerView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray_300"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resultIntermediateDescriptionTextView" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/resultDoneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:minWidth="200dp"
                android:text="@string/resultDoneButtonTitleText"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resultFooterDividerView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>